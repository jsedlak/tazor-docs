@layout DocLayout
@page "/docs/forms/wizard-progress"

<PageTitle>Wizard Progress - Tazor Docs</PageTitle>
<PageHead Title="Wizard Progress" />
<Lead>The <em>Wizard Progress</em> component provides a compact way of visualizing the progress through a number of steps, with individual step progress and validity at display.</Lead>

<SubHeader>With Titles</SubHeader>
<WizardProgress Sections="_sections" ShowTitles="true" />
<CodeBlock Code=@Resources.Examples_Forms_WizardProgress Language="razor" />

<SubHeader>With Titles &amp; Status</SubHeader>
<WizardProgress Sections="_sectionsWithStatus" ShowTitles="true" />
<CodeBlock Code=@Resources.Examples_Forms_WizardProgressStatus Language="razor" />

@code {
    private WizardSection[] _sections = new[]
    {
        new WizardSection { Title = "Section 1", Progress = 100 },
        new WizardSection { Title = "Section 2", Progress = 66 },
        new WizardSection { Title = "Section 3", Progress = 0 }
    };

    private WizardSection[] _sectionsWithStatus = new[]
    {
        new WizardSection { Title = "Section 1", Progress = 100, Status = ValidationSeverity.Valid },
        new WizardSection { Title = "Section 2", Progress = 66, Status = ValidationSeverity.Warning },
        new WizardSection { Title = "Section 3", Progress = 66, Status = ValidationSeverity.Error },
        new WizardSection { Title = "Section 4", Progress = 0 }
    };
}
